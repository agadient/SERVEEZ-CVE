GREP='@GREP@'
SED='@SED@'

test x"$1" = x-r && shift

in=$1
shift

script=$in.sed

$GREP -n -e '^[.]so' $in \
    | $SED -e 's/:.so /r /' \
           -e 'h' \
           -e 's/r.*/d/' \
           -e 'x' \
           -e 'G' \
    > $script

$SED -f $script $in
rm -f $script

exit 0

# fake-soelim ends here
